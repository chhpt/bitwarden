{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "bitwarden",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "bitwarden",
          "servicePath": "/",
          "uploadType": "image",
          "containerPort": 80,
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/tcb_public/bitwardenrs_server:alpine"
          },
          "envVariables": {
            "WEBSOCKET_ENABLED": "false",
            "RUST_BACKTRACE": "1",
            "DATABASE_URL": "mysql://{{env.DB_USER}}:{{env.DB_PASSWORD}}@{{env.DB_IP}}:{{env.DB_PORT}}"
          },
          "volumeMounts": {
            "/data": "bitwarden-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "bitwarden-cfs"
        },
        {
          "type": "CynosDB",
          "name": "bitwarden",
          "envMap": {
            "IP": "DB_IP",
            "PORT": "DB_PORT",
            "USERNAME": "DB_USER",
            "PASSWORD": "DB_PASSWORD"
          }
        }
      ]
    }
  }
}
